{
  "$schema": "https://platformatic.dev/schemas/v0.19.0/db",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "authorization": {
    "adminSecret": "{PLT_ADMIN_SECRET}",
    "rules": [
      {
        "role": "anonymous",
        "entity": "queue",
        "find": false,
        "save": false,
        "delete": false
      },
      {
        "role": "anonymous",
        "entity": "message",
        "find": false,
        "save": false,
        "delete": false
      }
    ]
  },
  "migrations": {
    "dir": "migrations"
  },
  "types": {
    "autogenerate": true
  },
  "plugins": {
    "paths": [
      {
        "path": "plugin.js",
        "options": {
          "lock": "{PLT_LOCK}",
          "leaderPoll": "{PLT_LEADER_POLL}"
        }
      }
    ]
  },
  "db": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "events": false
  }
}